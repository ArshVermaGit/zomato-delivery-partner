{
  "expo": {
    "name": "Zomato Delivery",
    "slug": "zomato-delivery-partner",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#EA0025"
    },
    "icon": "./assets/icon.png",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.zomato.delivery",
      "infoPlist": {
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow Zomato Delivery to track your location for deliveries.",
        "NSLocationWhenInUseUsageDescription": "Allow Zomato Delivery to track your location for deliveries."
      }
    },
    "android": {
      "package": "com.zomato.delivery",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Zomato Delivery to track your location for deliveries."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#EA0025"
        }
      ]
    ]
  }
}